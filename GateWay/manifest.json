  {
    "name": "GateWay",
    "version": "1.0",
    "description": "Portal sucks",
    "permissions": ["declarativeContent", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css": ["core.css"],
        "js": ["core.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }